        {
            selectedOption = e.Value.ToString();
            IEnumerable<CharacterModel> selection = selectedEpisodeCharacters.Where(a => a.Abilities.Contains(e.Value));

            Random random = new Random();
            int randomIndex = random.Next(selection.Count());

